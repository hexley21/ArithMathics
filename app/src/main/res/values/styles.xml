<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.Material3.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/android:colorBackground</item>
        <item name="elevation">0dp</item>
        <item name="popupTheme">@style/ThemeOverlay.MyTheme</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="checkedTextViewStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textAppearance">@style/DialogTextAppearance</item>
    </style>
    <style name="DialogTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Default_Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Finish_Button" parent="Default_Button">
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:backgroundTint">?attr/colorTertiaryContainer</item>

    </style>
    <style name="Main_Button" parent="Default_Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Default_Card_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Correct_card_text" parent="Default_Card_text">
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
    </style>

    <style name="KeyboardLayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="TonalButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">?attr/KeyboardButton</item>
        <item name="android:textColor">?attr/KeyboardText</item>
        <item name="iconTint">?attr/KeyboardText</item>
        <item name="elevation">40dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">28sp</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>